{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<section class="login-form d-flex flex-column align-items-center">
    <div class="connexion-title d-flex gap-3">
        <img src="{{ asset('build/images/cactus-connexion.png') }}" alt="cactus-connexion">
        <h1 class="fw-bold">Se connecter</h1>
    </div>

    <form action="{{ path('login') }}" method="post">
        <label for="username">Adresse email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Mot de passe:</label>
        <input type="password" id="password" name="_password"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/profile">

        <a href="{{ path("app_register") }}" title="s'inscrire">Créer un compte</a>
        <a href="#" title="mot de passe oublié">Mot de passe oublié</a>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <button class="btn-login" type="submit">OK</button>
    </form>
</section>
{% endblock %}
