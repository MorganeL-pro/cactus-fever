{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
<a href="{{ path('profile_edit', {id: app.user.id}) }}" class="btn btn-success m-3">Retour au profil</a>

<div class="container d-flex flex-column align-items-center">
    <h1 class="h2 m-3">Modification du mot de passe</h1>
    {{ form_start(form) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form._token) }}
            {{ form_row(form.plainPassword.second) }}
        <button type="submit" class="btn btn-success m-2">Enregistrer</button>
    {{ form_end(form) }}
</div>
{% endblock %}