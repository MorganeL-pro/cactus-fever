{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
<main class="m-4">
    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Taille</th>
                <th>Quantité</th>
                <th>Crée le</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.size }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.price / 100 }} €</td>
                <td>{{ product.picture }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">Afficher</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas de produit enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Creer un nouveau produit
    </a>
    <a href="{{ path('admin') }}" title="retour au panneau administrateur">Retour au panneau administrateur</a>
</main>
{% endblock %}
