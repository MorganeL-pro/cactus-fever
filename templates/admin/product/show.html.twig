{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<main class="d-flex flex-column align-items-center m-4">
    <h1>Produit</h1>

    <table class="table d-flex flex-column align-items-center">
        <tbody >
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ product.size }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix (centimes)</th>
                <td>{{ product.price / 100 }} €</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="product-img-show" src="/../build/images/{{ product.picture }}" alt="Card image cap"></td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex gap-3">
    <a href="{{ path('product_index') }}" class="btn btn-success" title="Retour à la liste">Retour à la liste</a>
    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-info" title="Editer">Editer</a>
    {{ include('admin/product/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
