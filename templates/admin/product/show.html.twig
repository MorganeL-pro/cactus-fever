{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<main class="d-flex flex-column align-items-center m-5">
    <a href="{{ path('product_index') }}" class="btn btn-success align-self-start" title="Retour à la liste">Retour à la liste</a>
    <h1 class="m-3">Produit</h1>

    <table class="table d-flex flex-column align-items-center">
        <tbody >
            <tr>
                <th>Id</th>
                <td class="text-center">{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td class="text-center">{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="text-center">{{ product.description }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td class="text-center">{{ product.size }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td class="text-center">{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td class="text-center">{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td class="text-center">{{ product.price / 100 }} €</td>
            </tr>
            <tr>
                <th>Image</th>
                <td class="text-center"><img class="product-img-show" src="/../build/images/{{ product.picture }}" alt="Card image cap" style="height: 200px"></td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex gap-3">
        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-info" title="Editer">Éditer</a>
        {{ include('admin/product/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
