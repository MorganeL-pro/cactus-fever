{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
<main class="d-flex flex-column align-items-center m-4">
    <a href="{{ path('category_index') }}" class="btn btn-success align-self-start" title="Retour à la liste">Retour à la liste</a>
    <h1 class="m-3">Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-3">
        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-info" title="Editer">Éditer</a>
        {{ include('admin/category/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
