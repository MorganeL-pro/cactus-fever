{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<main class="d-flex flex-column align-items-center m-5">
    <a href="{{ path('article_index') }}" class="btn btn-success align-self-start" title="Retour à la liste">Retour à la liste</a>
    <h1 class="m-3">{{ article.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td class="text-center">{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td class="text-center">{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td class="text-center">{{ article.text }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td class="text-center">{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td class="text-center">{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td class="text-center">{% if article.picture is not null %}<img class="product-img-show" src="/../build/images/{{ article.picture }}" alt="Card image cap" style="height: 200px">{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex gap-3">
        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-info" title="Editer">Éditer</a>
        {{ include('admin/article/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
