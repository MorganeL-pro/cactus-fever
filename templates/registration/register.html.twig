{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<section class="register-form d-flex flex-column m-3">
    <div class="connexion-title d-flex gap-3">
        <img src="{{ asset('build/images/cactus-registration.png') }}" alt="cactus-registration">
        <h1>S'inscrire</h1>
    </div>
    {{ form_start(registrationForm) }}
        <div class="form-fields d-flex">
            <div>
                {{ form_row(registrationForm.firstname, {
                    label: 'Prénom'
                }) }}
                {{ form_row(registrationForm.lastname, {
                    label: 'Nom de famille'
                }) }}
                {{ form_row(registrationForm.phone, {
                    label: 'Téléphone'
                }) }}
            </div>
            <div>
                {{ form_row(registrationForm.streetAddress, {
                    label: 'Numéro de rue + rue'
                }) }}
                {{ form_row(registrationForm.postalCode, {
                    label: 'Code postal'
                }) }}
                {{ form_row(registrationForm.city, {
                    label: 'Ville'
                }) }}
            </div>
            <div>
                {{ form_row(registrationForm.email, {
                    label: 'Adresse email'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
            </div>
        </div>
        {{ form_row(registrationForm.agreeTerms, {
            label: ' J\'accepte les CGU ainsi que le fait que mes données soient utilisées dans le cadre de la politique de confidentialité.'
        }) }}
        <button type="submit" class="btn-register">S'inscrire</button>
    {{ form_end(registrationForm) }}
    </section>
{% endblock %}
