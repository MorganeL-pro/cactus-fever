{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<main>
    <h1>Mes commandes</h1>
    {% if purchases|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Adresse</th>
                    <th>Date de commande</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for purchase in purchases %}
                    <tr>
                        <td>{{ purchase.id }}</td>
                        <td>{{ purchase.streetAddress }} {{ purchase.postalCode }} {{ purchase.city }}</td>
                        <td>{{ purchase.createdAt|date("m/d/Y") }}</td>
                        <td>{{ purchase.total / 100 }} €</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Vous n'avez passé aucune commande pour le moment.</p>
    {% endif %}
</main>
{% endblock %}