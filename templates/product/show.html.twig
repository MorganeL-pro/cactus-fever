{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<main class="d-flex flex-column align-items-center p-5">
    <div class="product-card">
        <img class="product-img" src="build/images/{{ product.picture }}" alt="Card image cap">
        <div class="card-body d-flex flex-column align-items-center">
          <h1 class="card-title text-center fw-bold">{{ product.name }}</h1>
          <p>{{ product.category.name }}</p>
          <p>{{ product.size }} - {{ product.price / 100 }} â‚¬</p>
          <p>{{ product.description }}</p>
          <a href="#" class="btn btn-success cart-btn" title="ajouter au panier">Ajouter au panier</a>
        </div>
    </div>
</main>
{% endblock %}
