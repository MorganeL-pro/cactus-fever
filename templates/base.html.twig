<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Cactus Fever | {% block title %} {% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {# banner #}
        <section class="logo-title d-flex justify-content-center align-items-center gap-4">
            <a href="{{ path('home') }}">
                <img src="{{ asset('build/images/cactus-logo.png') }}" alt="cactus-logo">
            </a>
            <h1>Cactus Fever</h1>
        </section>
        {# flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        {% include 'components/_info.html.twig' %}
        {% block body %}{% endblock %}
        {# navbar #}
        <header>
            <nav class="navbar fixed-bottom justify-content-around">
                <a class="navbar-brand" href="#">
                    E-shop
                </a>
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('build/images/news.png') }}" alt="news">
                </a>
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('build/images/search.png') }}" alt="search">
                </a>
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('build/images/cart.png') }}" alt="cart">
                </a>
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('build/images/account.png') }}" alt="login">
                </a>
                <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">menu</button>

                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="list-group list-group-flush d-flex flex-column align-items-center">
                            <li class="list-group-item"><a href="{{ path('home') }}">Accueil</a></li>
                            <li class="list-group-item"><a href="#">Articles</a></li>
                            <li class="list-group-item"><a href="#">E-shop</a></li>
                            <li class="list-group-item"><a href="#">Mon compte</a></li>
                            <li class="list-group-item"><a href="#">Mon panier</a></li>
                            <li class="list-group-item"><a href="#">Aide/FAQ</a></li>
                            <li class="list-group-item"><a href="#">Mentions l√©gales</a></li>
                            <li class="list-group-item"><a href="#">CGU</a></li>
                            <li class="list-group-item"><a href="#">RGPD</a></li>
                            <li class="list-group-item"><a href="#">Nous contacter</a></li>
                          </ul>
                    </div>
                </div>
              </nav>
        </header>
    </body>
</html>
